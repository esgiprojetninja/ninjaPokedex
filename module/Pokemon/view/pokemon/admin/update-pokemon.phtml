        <?= $this->formRow($form->get('description')->setValue($poke->getDescription())); ?>
    </div>
    <div class="form-group">
        <?= $this->formRow($form->get('type1')); ?>
    </div>
    <div class="form-group">
        <?= $this->formRow($form->get('type2')); ?>
    </div>
    <div class="form-group">
        <?= $this->formRow($form->get('id_national')->setValue($poke->getIdNational())); ?>
    </div>
    <?= $this->formHidden($form->get('csrf')); ?>
    <?= $this->formHidden($form->get('id_pokemon')->setValue($poke->getIdPokemon())); ?>
    <?= $this->formSubmit($form->get('submit')); ?>
    <?= $this->form()->closeTag();?>
<?php else: ?>
    <div class="row light-top-margin">
      <h1 class="text text-primary">Pokémon inexistant</h1>
